<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="computer" transaction-type="JTA">
	
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/computershop</jta-data-source>
		<class>com.hust.kiwi.repository.entites.Category</class>
		<class>com.hust.kiwi.repository.entites.CategoriesFeature</class>
		<class>com.hust.kiwi.repository.entites.Feature</class>
		<class>com.hust.kiwi.repository.entites.Invoice</class>
		<class>com.hust.kiwi.repository.entites.Manufacturer</class>
		<class>com.hust.kiwi.repository.entites.Product</class>
		<class>com.hust.kiwi.repository.entites.ProductsFeature</class>
		<class>com.hust.kiwi.repository.entites.ProductsImage</class>
		<class>com.hust.kiwi.repository.entites.ProductsInvoice</class>
		<class>com.hust.kiwi.repository.entites.Transportation</class>
		<class>com.hust.kiwi.repository.entites.User</class>


		<properties>
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
